<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--Login -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>finale.year.stage.controllers.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--Registration -->

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>finale.year.stage.controllers.Registration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--Password Recovery -->


    <servlet>
        <servlet-name>passwordrecovery</servlet-name>
        <servlet-class>finale.year.stage.controllers.PasswordRecovery</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>passwordrecovery</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>

    <!--Theme -->

    <servlet>
        <servlet-name>thememanager</servlet-name>
        <servlet-class>finale.year.stage.controllers.ThemeManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>thememanager</servlet-name>
        <url-pattern>/manage-theme</url-pattern>
    </servlet-mapping>

    <!--Home -->

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>finale.year.stage.controllers.Home</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!--Reclamation -->

    <servlet>
        <servlet-name>reclamation</servlet-name>
        <servlet-class>finale.year.stage.controllers.Reclamation</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>reclamation</servlet-name>
        <url-pattern>/reclamation</url-pattern>
    </servlet-mapping>


    <!--Logout -->

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>finale.year.stage.controllers.LogOut</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>




    <!--Fetch Info -->
    <servlet>
        <servlet-name>userinfo</servlet-name>
        <servlet-class>finale.year.stage.controllers.FetchInfo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userinfo</servlet-name>
        <url-pattern>/user/info</url-pattern>
    </servlet-mapping>

    <!-- Created by Philip Chicco -->

    <!-- Profile Manager -->
    <servlet>
        <servlet-name>ProfileManager</servlet-name>
        <servlet-class>finale.year.stage.controllers.ProfileManager</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ProfileManager</servlet-name>
        <url-pattern>/manage-profile</url-pattern>
    </servlet-mapping>

    <!-- Student Manager -->
    <servlet>
        <servlet-name>StudentManager</servlet-name>
        <servlet-class>finale.year.stage.controllers.StudentManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentManager</servlet-name>
        <url-pattern>/manage-student</url-pattern>
    </servlet-mapping>

    <!-- Phase Manager -->
    <servlet>
        <servlet-name>PhaseManager</servlet-name>
        <servlet-class>finale.year.stage.controllers.PhaseManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PhaseManager</servlet-name>
        <url-pattern>/manage-phase</url-pattern>
    </servlet-mapping>

    <!-- Stage Manager -->
    <servlet>
        <servlet-name>StageManager</servlet-name>
        <servlet-class>finale.year.stage.controllers.StageManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StageManager</servlet-name>
        <url-pattern>/manage-stage</url-pattern>
    </servlet-mapping>

</web-app>